<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_book_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/book_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="House No"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/book_name_input"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_name_label"
        android:layout_width="match_parent"
        android:layout_toEndOf="@+id/book_name_label"
        android:hint="House no"
        android:layout_marginStart="20dp"
        android:inputType="text" />


    <TextView
        android:id="@+id/author_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_name_input"
        android:text="House Owner Name"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/author_name_input"
        android:layout_height="wrap_content"
        android:layout_below="@+id/author_name_label"
        android:hint="Enter Owner name"
        android:layout_toEndOf="@id/author_name_label"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"

        android:inputType="text" />

    <TextView
        android:id="@+id/price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/author_name_input"
        android:text="Price ($)"

        android:textSize="16sp" />

    <EditText
        android:id="@+id/price_input"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price_label"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/price_label"
        android:hint="Enter price"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/quantity_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price_input"

        android:text="No of rooms"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/quantity_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quantity_label"
        android:layout_toEndOf="@id/quantity_label"
        android:hint="Enter quantity"
        android:layout_marginStart="20dp"
        android:inputType="number" />

    <TextView
        android:id="@+id/description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quantity_input"
        android:text="Description"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/description_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_label"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/description_label"
        android:hint="Enter description"
        android:inputType="text" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Save" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/save_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Back" />
    </RelativeLayout>

